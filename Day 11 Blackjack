############### Blackjack Project #####################
import random 
from replit import clear
from art import logo

#return a random card from deck
def deal_card():
  cards = [11, 2, 3, 4, 5, 6, 7, 8, 9, 10, 10, 10, 10]
  card = random.choice(cards)
  return card
def play_game():
  print(logo)
  user_cards = []
  computer_cards = []
  is_game_over = False
  
  for _ in range(2):
    user_cards.append(deal_card())
    computer_cards.append(deal_card())
  
  #return calcuated score for both computer and user
  def calculate_score(cards):
    if sum(cards) == 21 and len(cards) == 2:
      return 0
    if 11 in cards and sum(cards) > 21:
      cards.remove(11)
      cards.append(1)
    return sum(cards)
  
  def compare(user_score, computer_score):
    if user_score == computer_score:
      print("It's a draw, bro....")
    elif computer_score == 0:
      print("The computer crushed you. The computer overlords are here")
    elif user_score == 0:
      print("Way to go! You showed the Matrix who is the most bro one")
    elif user_score > 21:
      print("You tried. You went over.... :/")
    elif computer_score > 21:
      print("You made the computer glitch! Niiiice :3")
    elif user_score > computer_score:
      print("You beat the computer")
    else:
      print("The computer seized victory")
  
  while not is_game_over:
    user_score = calculate_score(user_cards)
    computer_score = calculate_score(computer_cards)
    print(f" Your cards: {user_cards}, current score: {user_score}")
    print(f" Computer's cards: {computer_cards[0]}")
    
    if user_score == 0 or computer_score == 0 or user_score > 21:
      is_game_over = True
    else: 
      more_cards = input("Type 'y' to get another card, type 'n' to pass: ").lower()
      if more_cards == 'y':
        user_cards.append(deal_card())
      else:
        is_game_over = True
  
  #Hint 12: Once the user is done, it's time to let the computer play. The computer should keep drawing cards as long as it has a score less than 17.
  
  while computer_score != 0 and computer_score < 17:
    computer_cards.append(deal_card())
    computer_score = calculate_score(computer_cards)
  
  print(f" Your final hand: {user_cards}, final score: {user_score}")
  print(f" Computer's final hand: {computer_cards}, computer final score: {computer_score}")
  print(compare(user_score, computer_score))
    
  
  #Hint 14: Ask the user if they want to restart the game. If they answer yes, clear the console and start a new game of blackjack and show the logo from art.py.

while input("Wanna play a game of Blackjack, bro? No money involved. Type 'y' or 'n'") == "y":
  clear()
  play_game()
